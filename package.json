{
  "name": "wa-language-tip",
  "displayName": "wa-language-tip",
  "description": "key => value 映射",
  "icon": "img/avatar.png",
  "version": "0.0.6",
  "engines": {
    "vscode": "^1.61.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onLanguage:javascript",
    "onLanguage:typescript",
    "onLanguage:javascriptreact",
    "onLanguage:typescriptreact"
  ],
  "main": "./dist/extension.js",
  "contributes": {
    "configuration": {
      "type": "object",
      "title": "wa-language-tip(值映射键)",
      "properties": {
        "waLanguageTipSettingPath": {
          "type": "string",
          "default": "src/constants/template.json",
          "description": "key<=>value配对关系表"
        },
        "waLanguageTipGloablValue": {
          "type": "array",
          "default": [],
          "description": "全局设置的自定义提示 优先级小于waLanguageTipSettingPath路径下的配置"
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "yarn run package",
    "compile": "webpack",
    "watch": "webpack --watch",
    "package": "webpack --mode production --devtool hidden-source-map",
    "compile-tests": "tsc -p . --outDir out",
    "watch-tests": "tsc -p . -w --outDir out",
    "pretest": "yarn run compile-tests && yarn run compile && yarn run lint",
    "lint": "eslint src --ext ts",
    "test": "node ./out/test/runTest.js",
    "build": "vsce package",
    "create-publisher": "vsce create-publisher",
    "vpub": "vsce publish",
    "release": "release-it"
  },
  "devDependencies": {
    "@types/glob": "^8.1.0",
    "@types/mocha": "^10.0.1",
    "@types/node": "20.2.5",
    "@types/vscode": "^1.61.0",
    "@typescript-eslint/eslint-plugin": "^5.59.8",
    "@typescript-eslint/parser": "^5.59.8",
    "@vscode/test-electron": "^2.3.2",
    "eslint": "^8.41.0",
    "mocha": "^10.2.0",
    "release-it": "^17.0.0",
    "ts-loader": "^9.4.3",
    "typescript": "^5.1.3",
    "webpack": "^5.85.0",
    "webpack-cli": "^5.1.1"
  },
  "dependencies": {
    "file-loader": "^6.2.0",
    "fs": "^0.0.1-security"
  },
  "publisher": "wa",
  "license": "SEE LICENSE IN LICENSE.txt"
}
